@model IEnumerable<Hotel_management.Models.HotelFeature>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hotel)
            </th>
            <th>
                Settings
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Hotel.Name)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Update" asp-route-id="@item.Id">Update</a> 
                <a  class="btn btn-success" asp-action="Details" asp-route-id="@item.Id">Details</a> 
                  <a new { onclick="return confirm('Are sure wants to delete the current Item?');" } asp-action="Delete" asp-route-id="@item?.Id" class="btn btn-danger"> Delete </a>
            </td>
           
        </tr>
}
    </tbody>
</table>
