@model IEnumerable<Hotel_management.Models.Hotel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>


<div class="d-flex justify-content-end mb-2">
    <a class="btn btn-primary" asp-action="Create">Create</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Hotelimages</th>
            <th scope="col">Name</th>
            <th scope="col">Location</th>
            <th scope="col">Description</th>
            <th scope="col">Settings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Hotel hotel in Model)
        {
        <tr>
            <th scope="row">@hotel.Id</th>
            @if(hotel.HotelImages!=null){
                @foreach (var img in hotel.HotelImages )
                {
                     <td>
                <img style="width:100px; height:100px;" src="~/images/Hotels/@img" alt="Alternate Text" />
            </td>
                    }
                }
                else
                {
                    <td>
                <img style="width:100px; height:100px;" src="~/images/Hotels/@hotel.Mainimg" alt="Alternate Text" />
            </td>
                }

            <td>@hotel.Name</td>
            <td>@hotel.Location.City</td>
            <td>@hotel.Description</td>
            <td class="d-flex">
                <a class="btn btn-success" asp-action="Detail" asp-route-Id="@hotel?.Id">Detail</a>
                <a class="btn btn-warning" asp-action="Update" asp-route-Id="@hotel?.Id">Update</a>
                <a new { onclick="return confirm('Are sure wants to delete the current Item?');" } asp-action="Delete" asp-route-id="@hotel?.Id" class="btn btn-danger"> Delete </a>

            </td>
        </tr>
        }
    </tbody>
</table>