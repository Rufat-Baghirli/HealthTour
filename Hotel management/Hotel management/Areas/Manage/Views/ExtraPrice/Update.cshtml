@model Hotel_management.Models.ExtraPrice

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<h1>Update</h1>

<h4>ExtraPrice</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="BabyPrice" class="control-label"></label>
                <input asp-for="BabyPrice" class="form-control" />
                <span asp-validation-for="BabyPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChildPrice" class="control-label"></label>
                <input asp-for="ChildPrice" class="form-control" />
                <span asp-validation-for="ChildPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YoungPrice" class="control-label"></label>
                <input asp-for="YoungPrice" class="form-control" />
                <span asp-validation-for="YoungPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HotelId" class="control-label"></label>
              <select asp-for="HotelId" class ="form-control">
                     @foreach (Hotel hotel in ViewBag.Hotels)
                        {

                            <option value="@hotel.Id">@hotel.Name</option>
                        }
                </select>
                <span asp-validation-for="HotelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

