                <option value="@feature.Id">Otel - @feature.Hotel.Name/Xüsusiyyət - @feature.Name</option>
                
            }
        </select>
        
       
                <span class="alert-danger" asp-validation-for="HotelFeatureId"></span>

            </div>
            <div class="form-group">
                <label asp-for="Detail" class="control-label"></label>
                <input asp-for="Detail" class="form-control" />
                <span asp-validation-for="Detail" class="text-danger"></span>
            </div>
       
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

