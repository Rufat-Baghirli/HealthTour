@model Hotel_management.Models.HotelFeatureDetails

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>HotelFeatureDetails</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                 <div class="form-group">
                <label asp-for="HotelFeatureId" class="control-label">HotelFeature</label>
               <select class="form-control" asp-for="HotelFeatureId">
