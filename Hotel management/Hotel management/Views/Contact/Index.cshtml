@model Contact
@using Microsoft.Extensions.Localization;
@inject IStringLocalizer<SharedResource> localizer;
@using System.Globalization;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ContactLayout.cshtml";
}


<div id="ContactHead" class="container">

    <form class="well form-horizontal" asp-action="SendMessage" id="contact_form">
      <fieldset>






        <div class="form-group">
          <label class="col-md-4 control-label">@localizer["First Name"]</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
               
              <input asp-for="FirstName"  placeholder="@localizer["First Name"]" class="form-control" type="text"/>
              <span  class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>

            </div>
          </div>
        </div>



        <div class="form-group">
          <label class="col-md-4 control-label">@localizer["Last Name"]</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
               
              <input asp-for="LastName" placeholder="@localizer["Last Name"]" class="form-control" type="text"/>
              <span  class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            </div>
          </div>
        </div>


        <div class="form-group">
          <label class="col-md-4 control-label">@localizer["Email"]</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
               
              <input asp-for="Email"  placeholder="@localizer["Email"]" class="form-control" type="text"/>
              <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
            </div>
          </div>
        </div>



        <div class="form-group">
          <label class="col-md-4 control-label">@localizer["Phone"] #</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <input asp-for="Phone" placeholder="+994(50) 613 84 36" class="form-control" />
              <span class="input-group-addon"><i class="glyphicon glyphicon-earphone"></i></span>

            </div>
          </div>
        </div>


     
    
        <div class="form-group">
          <label class="col-md-4 control-label">@localizer["City"]</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <input asp-for="City" placeholder="@localizer["City"]" class="form-control" type="text">
              <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
            </div>
          </div>
        </div>




        <div class="form-group">
          <label class="col-md-4 control-label">@localizer["Description"]</label>
          <div class="col-md-4 inputGroupContainer">
            <div class="input-group">
              <textarea asp-for="Description" class="form-control"  placeholder="@localizer["Description"]"></textarea>
 
              <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>


            </div>
          </div>
        </div>

        <!-- Success message -->
        <div class="alert alert-success" role="alert" id="success_message">Success <i
            class="glyphicon glyphicon-thumbs-up"></i> @localizer["Thanks for contacting us, we will get back to you shortly"].</div>

        <!-- Button -->
        <div class="form-group">
          <label class="col-md-4 control-label"></label>
          <div class="col-md-4">
            <button type="submit" class="btn btn-success">@localizer["Send"] <span class="glyphicon glyphicon-send"></span></button>
          </div>
        </div>

      </fieldset>
    </form>
  </div>
  

