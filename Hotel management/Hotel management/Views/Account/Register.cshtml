@model RegisterVM
@using Microsoft.Extensions.Localization;
@inject IStringLocalizer<SharedResource> localizer;
@using System.Globalization;
  @{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

}



      <div class="container">
        <div class="forms-container">
          <div class="signin-signup">
             <div class="text-center">
                                
                                <div class=" text-danger" asp-validation-summary="All"></div>
                            </div>
            <form method="post" class="sign-in-form">
              <h2 class="title">@localizer["Sign up"]</h2>
              <div class="input-field">
                <i class="fas fa-user"></i>
               <input asp-for="Name" class="form-control form-control-user" placeholder="@localizer["Name"]:">
                                        <span asp-validation-for="Name" class="text-danger"></span>
              </div>
              <div class="input-field">
                <i class="fas fa-user"></i>

                <input asp-for="SurName" class="form-control form-control-user" placeholder="@localizer["Surname"]:">
                                        <span asp-validation-for="SurName" class="text-danger"></span>
              </div>
             
               <div class="input-field">
                <i class="fas fa-user"></i>
                  <input asp-for="UserName" class="form-control form-control-user" placeholder="@localizer["Username"]">
                                    <span asp-validation-for="UserName" class="text-danger"></span>
              </div>
               <div class="input-field">
                                <i class="fas fa-envelope"></i>

                 <input asp-for="Email" class="form-control form-control-user" placeholder="@localizer["Email"]">
                                    <span asp-validation-for="Email" class="text-danger"></span>
              </div>
               <div class="input-field">
                <i class="fas fa-lock"></i>
                <input asp-for="Password" class="form-control form-control-user" placeholder="@localizer["Password"]">
                                        <span asp-validation-for="Password" class="text-danger"></span>
              </div>
               <div class="input-field">
                <i class="fas fa-lock"></i>
                  <input asp-for="ConfirmPassword" class="form-control form-control-user" placeholder="@localizer["Repeat Password"]">
                                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
              </div>
                                <button style="width:212px;height:67px" class="btn btn-primary">@localizer["Sign up"]</button>

              
             
            </form>
          
          </div>
        </div>
    
        <div class="panels-container">
          <div class="panel left-panel">
            <div class="content">
             
              <p>
           @localizer["Dear user, if you are registered, you can access your Account here"]...!
              </p>
             
                   <div class="d-flex justify-content-between">
                   <a style="text-transform:none" asp-controller="Home" asp-action ="Index" class="btn  btn-primary">
                @localizer["Home"]
              </a>
               <a asp-action ="Login" class="btn transparent" id="sign-in-btn">
                @localizer["Login"]
              </a>

               
            </div>
 
            </div>
            <img src="~/images/Login/register.svg" class="image" alt="" />
          </div>
   
        </div>
      </div>
 