@model ResetpasswordVM
@using Microsoft.Extensions.Localization;
@inject IStringLocalizer<SharedResource> localizer;
@using System.Globalization;
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


<div class="container">
        <div class="forms-container">
          <div class="signin-signup">
            <form  method="post" class="sign-in-form">
              <h2 class="title">@localizer["Reset"] @localizer["Password"]</h2>
                 
              
             <div class="input-field">
                                <i class="fas fa-envelope"></i>

                 <input asp-for="Password" class="form-control form-control-user" placeholder="@localizer["New"] @localizer["Password"]">
                                    <span asp-validation-for="Password" class="text-danger"></span>
              </div>
              <div class="input-field">
                <i class="fas fa-lock"></i>
                  <input asp-for="Confirmpassword" class="form-control form-control-user" placeholder="@localizer["Repeat Password"]">
                                        <span asp-validation-for="Confirmpassword" class="text-danger"></span>
              </div>
              <button type="submit"  class="btn solid">@localizer["Reset"]</button>
             
            </form>
    
          </div>
        </div>
    
          
        </div>
      </div>

