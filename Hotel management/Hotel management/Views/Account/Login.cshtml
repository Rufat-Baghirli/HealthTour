@model LoginVM
@using Microsoft.Extensions.Localization;
@inject IStringLocalizer<SharedResource> localizer;
@using System.Globalization;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";

}

    

<div class="container">
        <div class="forms-container">
          <div class="signin-signup">
               <div class="text-center">
                                
                                <div class=" text-danger" asp-validation-summary="ModelOnly"></div>
                            </div>
            <form  method="post" class="sign-in-form">
                 
              <h2 class="title">@localizer["Sign in"]</h2>
             <div class="input-field">
                                <i class="fas fa-envelope"></i>

                 <input asp-for="Email" class="form-control form-control-user" placeholder="@localizer["Email"]">
                                    <span asp-validation-for="Email" class="text-danger"></span>
              </div>
               <div class="input-field">
                <i class="fas fa-lock"></i>
                <input asp-for="Password" class="form-control form-control-user" placeholder="@localizer["Password"]">
                                        <span asp-validation-for="Password" class="text-danger"></span>
              </div>
              <button type="submit"  class="btn solid">@localizer["Login"]</button>
              <a asp-action="ForgotPassword" style="font-size: 1rem;
                  font-weight: 600; color: #073272;" >@localizer["Forgot Password"]?
               </a>
              
            </form>
          
          </div>
        </div>
    
        <div class="panels-container">
          <div class="panel left-panel">
            <div class="content">
             
              <p>
   @localizer["You can register and take advantage of our site"].

              </p>

              <div class="d-flex justify-content-between">
                   <a style="text-transform:none" asp-controller="Home" asp-action ="Index" class="btn  btn-primary">
                @localizer["Home"]
              </a>
              <a asp-action ="Register" class="btn transparent" id="sign-up-btn">
               @localizer["Register"]
              </a>

               
            </div>
 
            </div>
            <img src="~/images/Login/log.svg" class="image" alt="" />
          </div>
          
        </div>
      </div>

